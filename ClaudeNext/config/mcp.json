{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@context7/mcp-server"],
      "description": "Official library documentation and API references",
      "autoActivate": [
        "import.*from",
        "require\\(",
        "documentation",
        "library",
        "framework"
      ]
    },
    "sequential": {
      "command": "npx",
      "args": ["-y", "@sequential/thinking-server"],
      "description": "Complex analysis and multi-step reasoning",
      "autoActivate": [
        "complex",
        "analyze",
        "debug",
        "architecture",
        "system.*design"
      ]
    },
    "magic": {
      "command": "npx",
      "args": ["-y", "@magic/ui-server"],
      "description": "UI component generation and design systems",
      "autoActivate": [
        "component",
        "ui",
        "frontend",
        "react",
        "vue",
        "angular"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp-server"],
      "description": "Browser automation and E2E testing",
      "autoActivate": [
        "test",
        "e2e",
        "browser",
        "automation",
        "screenshot"
      ]
    }
  },
  "configuration": {
    "autoActivation": true,
    "parallelExecution": true,
    "timeout": 30000,
    "retryAttempts": 2,
    "caching": {
      "enabled": true,
      "ttl": 3600
    }
  },
  "serverPriority": {
    "documentation": ["context7", "sequential"],
    "debugging": ["sequential", "context7"],
    "ui": ["magic", "context7"],
    "testing": ["playwright", "sequential"]
  }
}